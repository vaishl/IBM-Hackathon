        </div>
        <div class="input-box">
          <input type="number" id="budgetInput" placeholder="Enter your budget">
          <input type="number" id="savingInput" placeholder="Enter your saving goal">
          <button onclick="displayInput()">Submit</button>
        </div>
    
        <div class="output-box">
          <p id="bOutput"></p>
          <p id="sOutput"></p>
        </div>
      </div>
    
      <div class="content-box hidden" id="itemDescription">
        <h2>Enter Purchased Items</h2>
        
        <table id="itemTable">
          <thead>
            <tr>
              <th>Item Name</th>
              <th>Category</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><input type="text" class="itemName" placeholder="Item Name"></td>
              <td>
                <select class="category">
                  <option value="General">General</option>
                  <option value="Food">Food</option>
                  <option value="Transport">Transport</option>
                  <option value="Clothing">Clothing</option>
                  <option value="Entertainment">Entertainment</option>
                </select>
              </td>
              <td><input type="number" class="price" placeholder="Price"></td>
            </tr>
          </tbody>
        </table>
    
        <div class="table-box">
          <button onclick="addItem()">Add New Item</button>
          <button onclick="displayPurchases()">Display Purchases</button>
        </div>
    
        <div class="output-box hidden" id="purchaseOutput">
          <h3>Purchased Items</h3>
          <div id="purchaseList"></div>
        </div>
      </div>
    
      <script>
          function displayInput() {
              let budget = document.getElementById("budgetInput").value;
              let savings = document.getElementById("savingInput").value;
    
              document.getElementById("bOutput").innerText = "Budget:£ " + budget;
              document.getElementById("sOutput").innerText = "Savings:£ " + savings;
    
              document.getElementById("itemDescription").classList.remove("hidden");
          }
    
          function addItem() {
              let table = document.getElementById("itemTable").getElementsByTagName('tbody')[0];
              let newRow = table.insertRow();
              
              // Item Name Column
              let itemCell = newRow.insertCell();
              let itemInput = document.createElement("input");
              itemInput.type = "text";
              itemInput.className = "itemName";
              itemInput.placeholder = "Item Name";
              itemCell.appendChild(itemInput);
    
              // Category Dropdown Column
              let categoryCell = newRow.insertCell();
              let categorySelect = document.createElement("select");
              categorySelect.className = "category";
              let categories = ["General", "Food", "Transport", "Clothing", "Entertainment"];
              categories.forEach(category => {
                  let option = document.createElement("option");
                  option.value = category;
                  option.textContent = category;
                  categorySelect.appendChild(option);
              });
              categoryCell.appendChild(categorySelect);
    
              // Price Column
              let priceCell = newRow.insertCell();
              let priceInput = document.createElement("input");
              priceInput.type = "number";
              priceInput.className = "price";
              priceInput.placeholder = "Price";
              priceCell.appendChild(priceInput);
          }
    
          function displayPurchases() {
              let items = document.querySelectorAll(".itemName");
              let categories = document.querySelectorAll(".category");
              let prices = document.querySelectorAll(".price");
              let purchaseList = document.getElementById("purchaseList");
              
              purchaseList.innerHTML = ""; // Clear previous data
    
              items.forEach((item, index) => {
                  let itemName = item.value.trim();
                  let category = categories[index].value;
                  let price = prices[index].value;
    
                  if (itemName && price) {
                      let itemInfo = `<p><strong>${itemName}</strong> - ${category}: £${price}</p>`;
                      purchaseList.innerHTML += itemInfo;
                  }
              });
    
              document.getElementById("purchaseOutput").classList.remove("hidden");
          }
      </script>
